{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "files": {
    "includes": [
      "!.next",
      "!node_modules",
      "!dist",
      "!build",
      "!public",
			"**/src/**/*.js",
			"**/src/**/*.tsx"
    ]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn"
      },

      "nursery": {
        "useSortedClasses": "warn"
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },

  "css": {
    "parser": {
      "cssModules": true
    }
  }
}